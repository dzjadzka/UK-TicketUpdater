{
  "name": "uk-ticket-updater",
  "version": "1.0.0",
  "description": "Multi-user NVV semester ticket downloader with device emulation",
  "main": "src/index.js",
  "type": "commonjs",
  "scripts": {
    "start": "node src/server.js",
    "download": "node src/index.js --db ./data/app.db",
    "setup:db": "node src/setupDb.js --db ./data/app.db",
    "api": "node src/server.js",
    "dev": "npm run dev:frontend",
    "dev:frontend": "node scripts/dev-frontend.js",
    "build:frontend": "cd frontend && npx vite build",
    "preview:frontend": "node scripts/preview-frontend.js",
    "test:frontend": "npm --prefix frontend run test",
    "test": "jest",
    "test:e2e": "playwright test",
    "test:coverage": "jest --coverage --silent",
    "test:watch": "jest --watch",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "pretest": "npm run lint",
    "start:test-api": "node scripts/start-test-api.js",
    "init:admin": "node scripts/create-initial-admin.js",
    "db:backup": "node scripts/backup-db.js"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "bcrypt": "^6.0.0",
    "better-sqlite3": "^9.6.0",
    "commander": "^13.1.0",
    "express": "^5.1.0",
    "express-rate-limit": "^8.2.1",
    "jsonwebtoken": "^9.0.2",
    "puppeteer": "^22.15.0"
  },
  "devDependencies": {
    "@playwright/test": "^1.50.0",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-jest": "^29.2.0",
    "jest": "^29.7.0",
    "prettier": "^3.6.2",
    "supertest": "^7.1.1"
  },
  "jest": {
    "setupFilesAfterEnv": [
      "<rootDir>/jest.setup.js"
    ],
    "testPathIgnorePatterns": [
      "<rootDir>/tests/e2e/",
      "<rootDir>/frontend/"
    ]
  }
}
